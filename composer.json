{
  "name": "meius/laravel-flag-forge",
  "description": "Lightweight wrapper for the meius/flag-forge library, seamlessly integrating bitwise enumeration and flag management into your Laravel applications.",
  "keywords": [
    "php",
    "laravel",
    "bitwise",
    "enumeration",
    "flags",
    "bitwise-operations",
    "enums",
    "performance",
    "efficiency",
    "configuration"
  ],
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Meius\\LaravelFlagForge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Meius\\LaravelFlagForge\\Tests\\": "tests/"
    },
    "files": [
      "resources/ide/_illuminate_database_eloquent_builder.php",
      "resources/ide/_illuminate_database_query_builder.php"
    ]
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=phpcs.xml"
  },
  "authors": [
    {
      "name": "Bohdan Meius",
      "email": "bohdan.meius@nixs.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "meius/flag-forge": "^1.0",
    "illuminate/support": "^11.0 || ^12.0",
    "illuminate/database": "^11.0 || ^12.0",
    "illuminate/console": "^11.0 || ^12.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3.0",
    "orchestra/testbench": "^9.0 || ^10.0"
  }
}
